{
  "name": "serverless-sub-routing",
  "version": "1.2.0",
  "description": "Serverless Sub Routing with DI",
  "main": "src/proxy/index.ts",
  "author": "matthew2564",
  "friendlyName": "Serverless Sub Routing",
  "license": "ISC",
  "scripts": {
    "build": "npm run clean && ts-node build-service.ts",
    "clean": "rimraf artifacts build dist",
    "format": "prettier . --write",
    "generate-openapi-spec": "ts-node documentation/generate-openapi-spec.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "setup": "sls dynamodb install",
    "start": "npm run clean && npm run build -- --source-map && SLS_DEBUG=* sls offline start",
    "start:debug": "npm run clean && tsc && SLS_DEBUG=* sls offline start",
    "package:functions": "mkdir -p artifacts && cd dist/functions && for dir in *; do if [ -d \"$dir\" ]; then zip -r \"../../artifacts/${dir}.zip\" \"$dir\"; fi; done",
    "package:proxy": "mkdir -p artifacts && cd dist && if [ -d \"proxy\" ]; then zip -r \"../artifacts/proxy.zip\" \"proxy\"; fi",
    "package": "npm run build && npm run package:proxy && npm run package:functions"
  },
  "keywords": [
    "serverless",
    "typescript",
    "di",
    "express"
  ],
  "dependencies": {
    "@aws-lambda-powertools/commons": "^1.18.1",
    "@aws-lambda-powertools/logger": "^1.18.1",
    "@aws-sdk/lib-dynamodb": "^3.533.0",
    "@dvsa/cvs-microservice-common": "^0.9.3",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "reflect-metadata": "^0.2.1",
    "routing-controllers": "^0.10.4",
    "serverless-http": "^3.2.0",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.136",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.27",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "class-validator-jsonschema": "^5.0.0",
    "esbuild": "^0.20.1",
    "esbuild-plugin-typescript-decorators": "^0.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "routing-controllers-openapi": "^4.0.0",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb": "^0.2.50",
    "serverless-offline": "^13.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.2"
  },
  "lint-staged": {
    "*.ts": "npm run lint:fix",
    "*.{js,css,md,ts}": "npm run format"
  }
}
